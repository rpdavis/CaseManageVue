rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only access their own data, or admins can access any
    match /users/{userId} {
      allow read, write: if request.auth != null && (
        request.auth.uid == userId ||
        (request.auth.token.role == "admin" || request.auth.token.role == "administrator" || request.auth.token.role == "administrator_504_CM" || request.auth.token.role == "sped_chair")
      );
      
      // Aeries configuration - users can only access their own encrypted config
      match /aeries_config/{configId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // App Settings collection - allow admin users to read/write
    match /appSettings/{document} {
      allow read, write: if request.auth != null && (
        request.auth.token.role == "admin" || 
        request.auth.token.role == "administrator" || 
        request.auth.token.role == "administrator_504_CM" || 
        request.auth.token.role == "sped_chair"
      );
    }
    
    // Config collection - for permissions matrix and other config
    match /config/{configId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && (
        request.auth.token.role == "admin" || 
        request.auth.token.role == "administrator" || 
        request.auth.token.role == "administrator_504_CM" || 
        request.auth.token.role == "sped_chair"
      );
    }
    
    // Students collection - allow read/write for authenticated users
    match /students/{studentId} {
      allow read, write: if request.auth != null;
    }
    
    // Aide Schedules collection - allow read/write for admins
    match /aideSchedules/{aideId} {
      allow read, write: if request.auth != null && (
        request.auth.token.role == "admin" || 
        request.auth.token.role == "administrator" || 
        request.auth.token.role == "administrator_504_CM" || 
        request.auth.token.role == "sped_chair"
      );
    }
    
    // Teacher Feedback Forms - allow case managers and admins to manage
    match /feedbackForms/{formId} {
      allow read, write: if request.auth != null && (
        request.auth.token.role == "admin" || 
        request.auth.token.role == "administrator" || 
        request.auth.token.role == "administrator_504_CM" || 
        request.auth.token.role == "sped_chair" ||
        request.auth.token.role == "case_manager"
      );
    }
    
    // Teacher Feedback Responses - read-only for case managers, write-only for functions
    match /feedbackResponses/{responseId} {
      allow read: if request.auth != null && (
        request.auth.token.role == "admin" || 
        request.auth.token.role == "administrator" || 
        request.auth.token.role == "administrator_504_CM" || 
        request.auth.token.role == "sped_chair" ||
        request.auth.token.role == "case_manager"
      );
      allow write: if false; // Only Cloud Functions can write responses
    }
    
    // Teacher Feedback Send Log - read-only for case managers, write-only for functions
    match /feedbackSendLog/{logId} {
      allow read: if request.auth != null && (
        request.auth.token.role == "admin" || 
        request.auth.token.role == "administrator" || 
        request.auth.token.role == "administrator_504_CM" || 
        request.auth.token.role == "sped_chair" ||
        request.auth.token.role == "case_manager"
      );
      allow write: if false; // Only Cloud Functions can write send logs
    }
    
    // Default rule - allow all reads and writes for authenticated users
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
